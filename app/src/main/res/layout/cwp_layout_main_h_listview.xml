<?xml version="1.0" encoding="utf-8"?>

<com.hut.cwp.mcar.cwp.view.HListView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hListView"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="@android:color/white"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_safe"
            android:layout_width="100dip"
            android:layout_height="80dip"
            android:src="@drawable/cwp_main_item_insurance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="车辆保险"
            android:textColor="#404040"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tag"
            android:layout_width="100dip"
            android:layout_height="80dip"
            android:src="@drawable/cwp_main_item_gastag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="今日油价"
            android:textColor="#404040"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_ticket"
            android:layout_width="100dip"
            android:layout_height="80dip"
            android:src="@drawable/cwp_main_item_illegal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="违章记录"
            android:textColor="#404040"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_notice"
            android:layout_width="100dip"
            android:layout_height="80dip"
            android:src="@drawable/cwp_main_item_notice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="通知移车"
            android:textColor="#404040"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="100dip"
            android:layout_height="80dip"
            android:src="@drawable/cwp_main_item_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="车辆体检"
            android:textColor="#404040"
            android:textSize="12dp" />

    </LinearLayout>

</com.hut.cwp.mcar.cwp.view.HListView>

