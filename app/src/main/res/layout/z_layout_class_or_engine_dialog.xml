<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_car_info_dialog_prompt"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="请输入XXX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:digits="1234567890abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:maxLines="1"
        android:background="@drawable/z_bcg_input_lsnum"
        android:id="@+id/et_car_info_dialog_input"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_car_info_dialog_confirm"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_car_info_dialog_cancel"
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>