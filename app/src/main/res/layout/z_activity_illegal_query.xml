<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_il_qy_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IllegalQueryActivity">

    <ProgressBar
        android:id="@+id/pb_il_qy_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/ll_il_qy_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_il_qy_top"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/z_il_qy_bcg_up">

            <Button
                android:id="@+id/bt_il_qy_back"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/way_rigister_btn_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="违章记录"
                android:textColor="#ffffff"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_il_qy_select_province"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/z_bcg_select_province"
                    android:gravity="center"
                    android:text="选择地区"
                    android:textColor="#75aff4"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_il_qy_dividing_line"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#75aff4" />

                <Button
                    android:id="@+id/bt_il_qy_select_city"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/z_bcg_select_city"
                    android:gravity="center"
                    android:text="选择城市"
                    android:textColor="#75aff4"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="115dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击上方按钮可选择地区"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请在下方选择或手动输入车辆信息"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_il_qy_car_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:choiceMode="singleChoice" />

        <LinearLayout
            android:id="@+id/ll_il_qy_query"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#838080"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_il_qy_query_bt"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/z_il_qy_unquery"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/tv_il_qy_query_tv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="查询"
                android:textColor="#cecece"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_il_qy_black_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_il_qy_place_list"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="#ffffff"
        app:behavior_hideable="false"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior" />
</android.support.design.widget.CoordinatorLayout>
