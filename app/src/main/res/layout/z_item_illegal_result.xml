<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/y20"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="时间"
                android:textColor="#404040"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_illegal_result_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="2016-03-03 13:13:13"
                android:textColor="#808080"
                android:textSize="@dimen/x24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="地点"
                android:textColor="#404040"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_illegal_result_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="市立医院路口"
                android:textColor="#808080"
                android:textSize="@dimen/x24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="描述"
                android:textColor="#404040"
                android:textSize="@dimen/x30" />

            <TextView

                android:id="@+id/tv_illegal_result_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="驾驶机动车违反道路交通信号灯通行的"
                android:textColor="#808080"
                android:textSize="@dimen/x24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="违章代码"
                android:textColor="#404040"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_illegal_result_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="XXXX"
                android:textColor="#808080"
                android:textSize="@dimen/x24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="扣分值"
                android:textColor="#404040"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_illegal_result_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="2016-03-03 13:13:13"
                android:textColor="#808080"
                android:textSize="@dimen/x24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="罚款金额"
                android:textColor="#404040"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_illegal_result_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="100"
                android:textColor="#808080"
                android:textSize="@dimen/x24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="状态"
                android:textColor="#404040"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_illegal_result_handled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20"
                android:text="已处理"
                android:textColor="#808080"
                android:textSize="@dimen/x24" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

