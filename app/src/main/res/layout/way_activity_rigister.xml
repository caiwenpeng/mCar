<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/way_bcg_login"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y100">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/y30"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x80"
                android:background="@drawable/way_login_btn_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="@dimen/x48" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x120"
            android:layout_marginRight="@dimen/x160"
            android:layout_marginTop="@dimen/y80"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="#ffffff"
                android:textSize="@dimen/x30" />

            <EditText
                android:id="@+id/edt_pwd"
                android:layout_width="@dimen/x400"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x40"
                android:layout_marginTop="@dimen/y20"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证密码"
                android:textColor="#ffffff"
                android:textSize="@dimen/x30" />

            <EditText
                android:id="@+id/edt_pwd_confirm"
                android:layout_width="@dimen/x400"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x40"
                android:layout_marginTop="@dimen/y20"
                android:inputType="textPassword" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_complete"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y140"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y40"
            android:background="@drawable/way_xml_btn_circle_full"
            android:src="@drawable/way_login_btn_login" />


    </LinearLayout>

</layout>
